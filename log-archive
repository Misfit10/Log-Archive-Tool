#!/bin/bash

# Exit on error

set -e

# Check argument
if [ -z "$1" ]; then
  echo "Usage: log-archive <log-directory>"
  exit 1
fi

LOG_DIR="$1"

# Validate directory
if [ ! -d "$LOG_DIR" ]; then
  echo "Error: Directory '$LOG_DIR' does not exist"
  exit 1
fi

# Variables
ARCHIVE_BASE_DIR="$HOME/log_archives"
LOG_FILE="$ARCHIVE_BASE_DIR/archive.log"
TIMESTAMP=$(date +"%Y%m%d_%H%M%S")
ARCHIVE_NAME="logs_archive_${TIMESTAMP}.tar.gz"

# Create archive directory if not exists
mkdir -p "$ARCHIVE_BASE_DIR"

# Create tar.gz archive
tar -czf "$ARCHIVE_BASE_DIR/$ARCHIVE_NAME" -C "$LOG_DIR" .

# Log archive date & time
echo "$(date +"%Y-%m-%d %H:%M:%S") - Archived $LOG_DIR to $ARCHIVE_NAME" >> "$LOG_FILE"

echo "Archive created: $ARCHIVE_BASE_DIR/$ARCHIVE_NAME"

